<section id="" class="container">
      <section id="main-content">
          <!-- <section class="wrapper"> -->




              <!-- page start-->
              <div class="row">
                 <div class="col-lg-12">
                    <section class="panel">

                              <header class="panel-heading tab-bg-info">

                                  <div class="col-md-12">
                                    <ul class="nav nav-tabs">
                                      <%@mrt_line.each do |line| %>

                                        <li class="">
                                            <a data-toggle="tab" href="#<%="#{line.line}"%>">
                                                <i class="fa fa-subway"></i>
                                                    <%= line.line %>
                                            </a>
                                        </li>

                                        <% end %>
                                    </ul>
                                  </div>
                                  <!-- /.container -->
                              </header>

                          <div class="panel-body">

                              <div class="tab-content">
 <%@mrt_line.each do |line| %>
                                  <div class="tab-pane" id="<%="#{line.line}"%>">
                                    <table class=" table table-responsive">
                                      <tr>
                                        <th>ID</th>
                                        <th>站名</th>
                                        <th>地址</th>
                                        <th>緯度</th>
                                        <th>經度</th>
                                      </tr>
                                      <%Mrt.where(line: "#{line.line}").each do |station| %>
                                      <tr>
                                        <td> <%= station.id %>          </td>
                                        <td> <%= station.name      %>   </td>
                                        <td> <%= station.address   %>   </td>
                                        <td> <%= station.latitude  %>   </td>
                                        <td> <%= station.longitude %>   </td>
                                      </tr>
                                      <% end %>
                                    </table>
                                  </div>


 <% end %>
                              </div>

                            </div>

                          </div>

                      </section>
                 </div>
              </div>

              <!-- page end-->
          <!-- </section>  section wrapper end -->
      </section>
      <!--main content end-->
  </section>
<section id="" class="container">
      <section id="main-content">
          <!-- <section class="wrapper"> -->




              <!-- page start-->
              <div class="row">
                 <div class="col-lg-12">
                    <section class="panel">

                              <header class="panel-heading tab-bg-info">

                                  <div class="col-md-12">
                                    <ul class="nav nav-tabs">
                                    <%@category.each do |c|%>
                                        <li class="">
                                            <a data-toggle="tab" href="#<%="#{c.name}"%>">
                                                <i class="fa fa-cutlery"></i>
                                                <%="#{c.name}"%>
                                            </a>
                                        </li>
                                     <% end %>
                                    </ul>
                                  </div>
                                  <!-- /.container -->
                              </header>

                          <div class="panel-body">

                              <div class="tab-content">
                              <%@category.each do |c|%>
                                  <div id="<%="#{c.name}"%>" class="tab-pane">
                                    <table class=" table table-responsive">
                                      <tr>
                                        <th>餐廳</th>
                                        <th>地址</th>
                                        <th>緯度</th>
                                        <th>經度</th>
                                      </tr>

                                      <% c.restaurants.each do |r|%>
                                      <tr>
                                        <td><%= r.name %></td>
                                        <td><%= r.address %></td>
                                        <td><%= r.latitude%></td>
                                        <td><%= r.longitude%></td>
                                      </tr>
                                      <% end %>
                                    </table>
                                  </div>
                                   <% end %>
                              </div>

                          </div>

                      </section>
                 </div>
              </div>

              <!-- page end-->
          <!-- </section>  section wrapper end -->
      </section>
      <!--main content end-->
  </section>
